def file_date (file,format=None):
	if file and len(file)and os.path.exists(file):
		try:
			import time
			n = os.path.getmtime(file)
			if format == None:
				format = "%d %b %Y %H:%M:%S"
			return time.strftime(format,time.gmtime(n))
		except: pass
	return ""
