<t tx="T1152">def endElement(self, name):
    # process xpath 
    size = len(self._xpath)
    for i in range(size):
        size = size - 1
        if self._xpath[-i - 1] == '/':
            break
    self._xpath = self._xpath[:size]
    self._p_stack[-1][N_ISSUE] = self._n_elmt - self._p_stack[-1][N_ISSUE]
    # remove last element from stack
    self._p_stack.pop()
