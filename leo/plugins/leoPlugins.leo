def createMenuEntries (self,menu,table,openWith=0):
	
	for label,accel,command in table:
		id = const(label)
		menu.Append(id,label,label)
		
		if 1:
			wx.EVT_MENU(self,id,command)

		else: # Doesn't help: methods must be defined in the table.
