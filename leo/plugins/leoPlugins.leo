	// Resize splitter2 with equal sized panes.
	size = mSplitter2 -&gt; GetClientSize();
	w = size.GetWidth();
	h = size.GetHeight();
	if ( mSplitter2 -&gt; GetSplitMode() == wxSPLIT_VERTICAL )
		mSplitter2 -&gt; SetSashPosition((3*w)/5, TRUE);
	else
		mSplitter2 -&gt; SetSashPosition((3*h)/5, TRUE);
