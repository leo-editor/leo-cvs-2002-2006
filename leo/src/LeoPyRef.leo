    '''Convert a stroke (key to k.bindingsDict) to an actual Tk binding.'''
    
    stroke = stroke.lstrip('&lt;').rstrip('&gt;')
    
    for a,b in (
        ('Alt+','Alt-'),
        ('Ctrl+','Control-'),
        ('Shift+','Shift-'),
        ('Command+','Command-'),
